<script>
  // æ´»å‹•ãƒã‚¹ã‚¿ï¼ˆindex/saved ã¨åŒã˜ï¼‰
  const ACTIVITIES = [
    { id:"off",   label:"ãŠä¼‘ã¿",       emoji:"ğŸ˜¶", color:"#9ca3af" },
    { id:"sport", label:"é‹å‹•",         emoji:"ğŸƒ", color:"#3b82f6" },
    { id:"craft", label:"å·¥ä½œ",         emoji:"ğŸ¨", color:"#f59e0b" },
    { id:"game",  label:"ãƒ«ãƒ¼ãƒ«ã‚²ãƒ¼ãƒ ", emoji:"ğŸ²", color:"#a855f7" },
    { id:"kara",  label:"ã‚«ãƒ©ã‚ªã‚±",     emoji:"ğŸ¤", color:"#ef4444" },
    { id:"study", label:"å­¦ç¿’",         emoji:"ğŸ“š", color:"#16a34a" },
    { id:"planet",label:"ãƒ—ãƒ©ãƒã‚¿ãƒªã‚¦ãƒ ",emoji:"ğŸª", color:"#0ea5e9" },
    { id:"prog",  label:"ãƒ—ãƒ­ã‚°ãƒ©ãƒŸãƒ³ã‚°",emoji:"ğŸ¤–", color:"#111827" },
  ];
  const findAct = (id)=> ACTIVITIES.find(a=>a.id===id);

  const pad2 = (n)=> String(n).padStart(2,"0");
  const ymd = (y,m,d)=> `${y}-${pad2(m+1)}-${pad2(d)}`;

  // base64 (utf8) decode
  function b64DecodeUtf8(b64){
    const bin = atob(b64);
    const bytes = Uint8Array.from(bin, c => c.charCodeAt(0));
    return new TextDecoder().decode(bytes);
  }

  const params = new URLSearchParams(location.search);
  const y = Number(params.get("y"));
  const m = Number(params.get("m")); // 1-12
  const data = params.get("data");   // base64 JSON

  document.getElementById("headTitle").textContent = `ã‚«ãƒŠãƒªã‚¢é€šä¿¡ ${y}å¹´ ${m}æœˆ`;

  let assignments = {};
  try{
    if(data){
      const json = b64DecodeUtf8(data);
      assignments = JSON.parse(json);
    }
  }catch(e){
    assignments = {};
  }

  // æç”»
  const viewMonth = m - 1; // 0-11
  const first = new Date(y, viewMonth, 1);
  const last  = new Date(y, viewMonth+1, 0);
  const firstDow = first.getDay();

  const calBody = document.getElementById("calBody");
  calBody.innerHTML = "";

  let day = 1 - firstDow;
  for(let r=0; r<6; r++){
    const tr = document.createElement("tr");
    for(let c=0; c<7; c++, day++){
      const td = document.createElement("td");
      td.className = "cell";

      const inMonth = (day>=1 && day<=last.getDate());
      td.dataset.out = inMonth ? "false" : "true";

      if(!inMonth){
        td.innerHTML = `<div class="daynum"></div>`;
        tr.appendChild(td);
        continue;
      }

      const key = ymd(y, viewMonth, day);
      const actId = assignments[key];
      const act = actId ? findAct(actId) : null;

      td.innerHTML = `
        <div class="daynum">${day}</div>
        ${act ? `
          <div class="pill" style="background: color-mix(in oklab, ${act.color} 14%, #ffffff); border-color: color-mix(in oklab, ${act.color} 30%, #ffffff);">
            <span class="emoji">${act.emoji}</span>
            <span>${act.label}</span>
          </div>
        ` : ``}
      `;
      tr.appendChild(td);
    }
    calBody.appendChild(tr);

    // æœ€å¾Œã®é€±ãŒç©ºãªã‚‰çµ‚äº†
    const hasInMonth = Array.from(tr.children).some(td => td.dataset.out === "false");
    if(!hasInMonth) break;
  }

